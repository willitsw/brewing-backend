generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id              String @id
  user            User @relation(fields: [userId], references: [id])
  userId          String
  description     String?
  name            String
  type            String
  author          String?
  createdDate     DateTime @default(now())
  updatedDate     DateTime @default(now())
  measurementType String
  batchSize       Float
  efficiency      Int
  ingredients     Ingredient[]
}

model User {
  id                      String @id
  email                   String
  displayName             String
  recipes                 Recipe[]
  measurementType         String
  batchSize               Float
  boilTime                Int
  brewhouseEfficiency     Int
  waterLossPerGrain       Float
  fermentorTrubWaterLoss  Float
  kettleTrubWaterLoss     Float
  boilOffWaterLossRate    Float
  sparge                  Boolean
  mashThickness           Float
}

model Ingredient {
  id          String @id
  type        String
  name        String
  amount      Float
  amountType  String?
  notes       String?
  step        String
  timing      Int?
  alphaAcid   Float?
  attenuation Int?
  form        String?
  lovibond    Float?
  potential   Float?
  recipe      Recipe @relation(fields: [recipeId], references: [id])
  recipeId    String
}