{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "./artifacts/compiled-ts",
        "baseUrl": "./dev-server",
        "module": "CommonJS",
        "moduleResolution": "node",
        "jsx": "react"
    },
    "include": [
        "back-end/**/*.ts",
        "dev-server/**/*.ts",
        "scripts/**/*.ts",
        "seed-data/**/*.ts",
        "back-end/lambdas/**/*.ts",
        "back-end/constants.ts",
        "front-end/**/*.tsx"
    ]
}